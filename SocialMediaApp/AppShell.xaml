<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SocialMediaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SocialMediaApp"
    xmlns:views="clr-namespace:SocialMediaApp.MVVM.Views"
    xmlns:viewmodels="clr-namespace:SocialMediaApp.MVVM.ViewModels"
    Shell.FlyoutBehavior="Flyout">

    <Shell.SearchHandler>
        <SearchHandler/>
    </Shell.SearchHandler>
    
    <TabBar x:Name="ButtomTabBar">
        <Tab  
             Icon="home.png" Title="Home">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="MainPage">
            </ShellContent>
        </Tab>
        <Tab Icon="bell.png" Title="Notifications">
            <ShellContent />
        </Tab>
        <Tab Icon="search.png" Title="Explore">
            <ShellContent />
        </Tab>
        <Tab Icon="settings.png" Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}"/>
        </Tab>
    </TabBar>

</Shell>
